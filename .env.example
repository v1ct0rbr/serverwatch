# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=serverwatch_user
DATABASE_PASSWORD=serverwatch_password
DATABASE_NAME=serverwatch_db

# ===========================================
# KEYCLOAK CONFIGURATION
# ===========================================
# URL base do servidor Keycloak (sem /realms)
KEYCLOAK_AUTH_SERVER_URL=https://seudominio.com.br
# Nome do realm no Keycloak
KEYCLOAK_REALM=SEUREALM
# Client ID da aplicação registrada no Keycloak
KEYCLOAK_CLIENT_ID=serverwatch-client
# Client Secret da aplicação (obter do Keycloak Admin Console)
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# ===========================================
# KEYCLOAK ADMIN API CONFIGURATION
# ===========================================
# Client ID para acesso administrativo (opcional)
KEYCLOAK_ADMIN_CLIENT_ID=serverwatch-admin
# Client Secret para acesso administrativo (opcional)
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-secret-here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# URL base da aplicação (para redirects OAuth2)
APP_BASE_URL=http://localhost:8080
# Porta da aplicação Spring Boot
SERVER_PORT=8080

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Configurações de sessão e JWT
JWT_ACCESS_TOKEN_VALIDITY=3600
JWT_REFRESH_TOKEN_VALIDITY=86400
SESSION_TIMEOUT=1800

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Nível de log para security (DEBUG, INFO, WARN, ERROR)
LOGGING_LEVEL_SECURITY=INFO
# Nível de log para Keycloak integration
LOGGING_LEVEL_KEYCLOAK=DEBUG

# ===========================================
# DEVELOPMENT/PRODUCTION FLAGS
# ===========================================
# Perfil ativo do Spring (local, dev, prod)
SPRING_PROFILES_ACTIVE=local
# Habilitar logs de debug para OAuth2
DEBUG_OAUTH2=false
# Habilitar SSL (para produção)
ENABLE_SSL=false

# ===========================================
# TIMEZONE CONFIGURATION
# ===========================================
TZ=America/Recife

# ===========================================
# MAIL CONFIGURATION
# ===========================================
MAIL_HOST=smtp.seudominio.com.br
MAIL_PORT=587
MAIL_USERNAME=seu_usuario
MAIL_PASSWORD=sua_senha
MAIL_FROM_ADDRESS=noreply@seudominio.com.br
MAIL_FROM_NAME="ServerWatch"
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_DEBUG=false
# ===========================================